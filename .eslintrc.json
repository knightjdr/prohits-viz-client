{
  "env": {
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "jest"
  ],
  "root": true,
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "operator-linebreak": [2, "before"],
    "semi": [2, "always"]
  }
}
